      ),
    );
  }
}

Column and Row

import 'package:flutter/material.dart';

void main() => runApp(MyApp());

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: Scaffold(
        appBar: AppBar(
          title: Text("Layout Row dan Column"),
        ),
        body: Column(children: <Widget>[
          Text("Text 1"),
          Text("text 2"),
          Text("text 3"),
        ]),
      ),

    );
  }
}

